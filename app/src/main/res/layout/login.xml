<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                    android:background="@color/DodgerBlue">

    <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="267dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:cardCornerRadius="8dp"
            app:cardElevation="4dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.3"


    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:gravity="center"
                    android:background="@drawable/loginedit2"
                    android:layout_width="220dp"
                    android:layout_height="37dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/pass_crd"
                    android:hint="password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.452"/>
            <EditText
                    android:background="@drawable/loginedit1"
                    android:layout_width="220dp"
                    android:layout_height="37dp"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/user_crd"
                    android:hint="username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.16"/>
            <Button
                    android:background="@drawable/loginbtn"
                    android:text="Login"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/login_sys"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="37dp"
                    app:layout_constraintHorizontal_bias="0.526"/>
            <CheckBox
                    android:text="CheckBox"
                    android:layout_width="28dp"
                    android:layout_height="23dp"
                    android:id="@+id/checkBox"
                    app:layout_constraintStart_toStartOf="@+id/pass_crd"
                    app:layout_constraintTop_toBottomOf="@+id/pass_crd"
                    android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Remeber me?"
                    android:textColor="@color/black"
                    android:layout_width="90dp"
                    android:layout_height="18dp"
                    android:gravity="bottom"
                    android:id="@+id/remember"
                    app:layout_constraintStart_toEndOf="@+id/checkBox" tools:text="Remember me?"
                    app:layout_constraintBottom_toTopOf="@+id/login_sys" android:layout_marginBottom="16dp"/>
            <TextView
                    android:textColor="@color/black"
                    android:text="Don`t have an account?"
                    android:layout_width="161dp"
                    android:layout_height="17dp"
                    android:id="@+id/dont_have_acc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
            <TextView
                    android:text="SIGNUP"
                    android:textColor="@color/DodgerBlue"
                    android:layout_width="54dp"
                    android:layout_height="18dp"
                    android:id="@+id/signup" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dont_have_acc" android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    app:layout_constraintHorizontal_bias="0.77"
                    app:layout_constraintTop_toTopOf="@+id/dont_have_acc"
                    app:layout_constraintBottom_toBottomOf="@+id/dont_have_acc" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:textColor="@color/DodgerBlue"
                    android:gravity="left"
                    android:text="forgot password?"
                    android:layout_width="124dp"
                    android:layout_height="20dp"
                    android:id="@+id/forgotpass"
                    app:layout_constraintTop_toTopOf="@+id/remember"
                    app:layout_constraintBottom_toBottomOf="@+id/remember"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginBottom="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>